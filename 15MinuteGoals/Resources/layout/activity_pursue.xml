<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become a C# Expert"
        android:textColor="#696969"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22dp"/>
    <ImageView
        android:layout_width="22dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/goal_title"
        app:layout_constraintBottom_toBottomOf="@id/goal_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_left_indicator"
        android:layout_marginLeft="20dp"/>  
    <View
        android:id="@+id/goal_title_spacer"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="#59b8ff"
        app:layout_constraintTop_toBottomOf="@id/goal_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/achievebtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:text="Start Achieving!"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="55dp"
        android:background="@drawable/selector_bg_pursuebtn"
        android:drawableLeft="@drawable/icon_pursue"
        android:paddingLeft="90dp"
        android:drawablePadding="-80dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/achievebtn"
        app:layout_constraintTop_toBottomOf="@id/goal_title_spacer">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/progress_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gradient_roundedcorners"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/state_logo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/icon_reader"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:textColor="#5c9aff"
                    android:background="@drawable/bg_user_headerbar_textview"/>
                <TextView
                    android:id="@+id/state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="You'r a learner, keep learning!"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toRightOf="@id/state_logo"
                    app:layout_constraintTop_toTopOf="@id/state_logo"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Tap to see your progress"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toRightOf="@id/state_logo"
                    app:layout_constraintTop_toBottomOf="@id/state_text"
                    app:layout_constraintLeft_toLeftOf="@id/state_text"
                    android:layout_marginTop="5dp"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/start_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here's where we should start today"
                app:layout_constraintTop_toBottomOf="@id/progress_widget_container"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="@id/progress_widget_container"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/start_today" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    
</android.support.constraint.ConstraintLayout>