<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become a C# Expert"
        android:textColor="#696969"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22dp"/>
    <ImageView
        android:id="@+id/gobackBtn"
        android:layout_width="22dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/goal_title"
        app:layout_constraintBottom_toBottomOf="@id/goal_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_left_indicator"
        android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/goal_title_spacer"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="#59b8ff"
        app:layout_constraintTop_toBottomOf="@id/goal_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <_15MinuteGoals.UI.CustomViews.ProgressBox
        android:id="@+id/pursueprogress"
        android:alpha="0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/goal_title_spacer"/>
    <Button
        android:id="@+id/achievebtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:text="Start Achieving!"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="55dp"
        android:background="@drawable/selector_bg_pursuebtn"
        android:drawableLeft="@drawable/icon_pursue"
        android:paddingLeft="90dp"
        android:drawablePadding="-80dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/pursueScroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/achievebtn"
        app:layout_constraintTop_toBottomOf="@id/pursueprogress">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pursueContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>