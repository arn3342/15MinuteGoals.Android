<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/selector_bg_messageScreen"
        android:layout_marginBottom="3dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/messageUserImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/demo_user"
            />
        <TextView
            android:id="@+id/messageUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brian Smith"
            app:layout_constraintLeft_toRightOf="@id/messageUserImg"
            app:layout_constraintTop_toTopOf="@id/messageUserImg"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/messageLastDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thu, 2.30PM"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@id/messageUserName"
            app:layout_constraintTop_toBottomOf="@id/messageUserName"
            android:textSize="13dp"
            android:textColor="#a7a7a7"
            android:fontFamily="sans-serif"
            android:singleLine="false"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/messageSelf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:singleLine="false"
            android:text="Hey Aousaf, I just started following the course ..."
            android:textColor="#7a7a7a"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageUserImg" />
        <TextView
            android:id="@+id/hintHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/messageSelf"
            android:layout_marginTop="10dp"
            android:text="Hold for quick reply"
            android:textSize="13dp"
            android:textColor="#9d9d9d"/>
        <TextView
            android:id="@+id/messageUnseenCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/bg_notifBubble"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            app:layout_constraintRight_toRightOf="@id/messageUserImg"
            app:layout_constraintBottom_toBottomOf="@id/messageUserImg"
            android:translationY="3dp"
            android:translationX="3dp"/>
    </android.support.constraint.ConstraintLayout>