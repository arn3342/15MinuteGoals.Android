<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:background="@drawable/selector_bg_messageScreen"
        android:paddingTop="10dp"
        android:clickable="true">
    <ImageView
        android:id="@+id/messageUserImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/demo_user"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brian Smith"
        app:layout_constraintLeft_toRightOf="@id/messageUserImg"
        app:layout_constraintTop_toTopOf="@id/messageUserImg"
        app:layout_constraintBottom_toBottomOf="@id/messageUserImg"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:textColor="#0aa0ff"
        android:fontFamily="sans-serif-medium"
        android:singleLine="true"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hey Aousaf, I just started following the course you suggested! Seems like it's an amazing one! Thank you"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/messageUserImg"
        app:layout_constraintTop_toBottomOf="@id/messageUserImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="#a7a7a7"
        android:fontFamily="sans-serif"
        android:singleLine="false"
        android:maxLines="2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thu, 2.30PM"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/messageUserImg"
        app:layout_constraintBottom_toBottomOf="@id/messageUserImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="#a7a7a7"
        android:fontFamily="sans-serif"
        android:singleLine="false"
        android:maxLines="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="13dp"
        android:textStyle="bold"
        android:background="@drawable/bg_notifBubble"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/messageUserImg"
        app:layout_constraintLeft_toLeftOf="@id/messageUserImg"
        app:layout_constraintRight_toRightOf="@id/messageUserImg"
        android:layout_marginTop="5dp"/>
</android.support.constraint.ConstraintLayout>