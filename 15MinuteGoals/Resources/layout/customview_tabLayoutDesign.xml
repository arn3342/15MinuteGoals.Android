<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/headerbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/tabIco"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/goal_blue_icon"
        app:layout_constraintRight_toLeftOf="@+id/tabTitle"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabIco"
        app:layout_constraintBottom_toBottomOf="@id/tabIco"
        app:layout_constraintLeft_toRightOf="@id/tabIco"
        android:textSize="13dp"
        android:textColor="#757575"/>
</android.support.constraint.ConstraintLayout>