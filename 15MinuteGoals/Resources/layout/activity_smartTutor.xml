<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#fff">
    <EditText
        android:id="@+id/searchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_searchBox"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:paddingRight="35dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:hint="Ask the smart tutor"
        android:textColor="#8c8c8c"
        android:singleLine="true"
        android:textSize="13dp"
        android:drawableLeft="@drawable/icon_search_icon_dim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/micButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mic_icon"
        android:padding="7dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:alpha=".5"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchBox"
        android:background="@drawable/selector_regulardim"
        android:layout_marginTop="15dp"
        android:singleLine="false"
        android:padding="10dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">
        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/camera_icon"/>
        <TextView
            android:id="@+id/camText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            app:layout_constraintLeft_toRightOf="@id/camIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="Take a picture of the question"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/camText"
            app:layout_constraintRight_toRightOf="@id/camText"
            app:layout_constraintTop_toBottomOf="@id/camText"
            android:text="(e.g. a formula, an equation etc.)"
            android:textSize="13dp"
            android:textColor="#9c9c9c" />
    </android.support.constraint.ConstraintLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cameraBtn"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/answerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>