<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_marginTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/feed_user_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/videothumb_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ep-1: Learning about classes"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/feed_user_image" />
    <TextView
        android:id="@+id/content_shortdetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Learn about classes in C#, make your own classes and so on"
        android:textColor="#737373"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/content_title"
        app:layout_constraintLeft_toLeftOf="@id/content_title"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/goal_title_spacer"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#a1a1a1"
        app:layout_constraintTop_toBottomOf="@id/content_shortdetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>