<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scaleType = "centerCrop">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sample_course_bg"
        android:scaleType="centerCrop"/>
    <android.support.constraint.ConstraintLayout
        android:background="@drawable/bg_black_to_white_gradient"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="30dp">
        <TextView
            android:id="@+id/course_contentsoverview_courseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="{Course Title}"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="2.0"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/course_contentsoverview_by_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by"
            android:textStyle="normal"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/course_contentsoverview_courseTitle"
            app:layout_constraintTop_toBottomOf="@id/course_contentsoverview_courseTitle"/>
        <TextView
            android:id="@+id/course_singlebar_coursePublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{Course Publisher}"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            app:layout_constraintLeft_toRightOf="@id/course_contentsoverview_by_textview"
            app:layout_constraintTop_toTopOf="@id/course_contentsoverview_by_textview"
            app:layout_constraintBottom_toBottomOf="@id/course_contentsoverview_by_textview"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>