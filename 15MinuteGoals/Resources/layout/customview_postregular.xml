<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/headerbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/bg_postbox"
    android:focusableInTouchMode="true"
    android:minWidth="25dp"
    android:minHeight="25dp"
    android:paddingBottom="15dp"
    android:layout_margin="15dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/feed_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/demo_user"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aousaf Rashid"
        android:textColor="#737373"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/feed_user_image" />
    <TextView
        android:id="@+id/usercreds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEO, 15MinuteGoals"
        android:textColor="#14a0fc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toRightOf="@id/feed_user_image"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/selector_bg_user_headerbar_textview"
        android:src="@drawable/bg_inspirebtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/feed_user_image"
        app:layout_constraintBottom_toBottomOf="@id/feed_user_image"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/postself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you look back at your path and see no bumps, no holes, no obstackles, then sorry my friend, your achievement is not big enough!"
        android:textColor="#545454"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/feed_user_image"
        app:layout_constraintLeft_toLeftOf="@id/feed_user_image"/>
    <ImageView
        android:id="@+id/inspire_small_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/inspired_small"
        app:layout_constraintTop_toBottomOf="@id/postself"
        app:layout_constraintLeft_toLeftOf="@id/feed_user_image"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/totalinspired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5k"
        android:textColor="#14a0fc"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/inspire_small_icon"
        app:layout_constraintBottom_toBottomOf="@id/inspire_small_icon"
        app:layout_constraintLeft_toRightOf="@id/inspire_small_icon" />
    <Button
        android:id="@+id/feedbackbtn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/selector_bg_user_headerbar_textview"
        android:drawableLeft="@drawable/icon_feedback"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="Feedback"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:textStyle="normal"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#636363"
        app:layout_constraintLeft_toRightOf="@id/totalinspired"
        app:layout_constraintTop_toTopOf="@id/totalinspired"
        app:layout_constraintBottom_toBottomOf="@id/totalinspired"/>
    <Button
        android:id="@+id/sharebtn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/selector_bg_user_headerbar_textview"
        android:drawableLeft="@drawable/icon_share"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Share"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="#636363"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toRightOf="@id/feedbackbtn"
        app:layout_constraintTop_toTopOf="@id/totalinspired"
        app:layout_constraintBottom_toBottomOf="@id/totalinspired"/>
</android.support.constraint.ConstraintLayout>