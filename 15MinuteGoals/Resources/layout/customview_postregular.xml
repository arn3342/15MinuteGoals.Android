<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:minWidth="25dp"
    android:minHeight="25dp"
    android:layout_marginBottom="3dp">
    <ImageView
        android:id="@+id/feed_user_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bg_roundImage"
        android:background="#e4e4e4"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aousaf Rashid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/feed_user_image"
        app:layout_constraintLeft_toRightOf="@id/feed_user_image" />
    <TextView
        android:id="@+id/usercreds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSC Candi., National Ideal School"
        android:textColor="#14a0fc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/feed_user_image"
        app:layout_constraintLeft_toRightOf="@id/feed_user_image"/>
    <TextView
        android:id="@+id/postself"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post goes here!"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        app:layout_constraintRight_toRightOf="@id/inspireButton"
        app:layout_constraintTop_toBottomOf="@id/feed_user_image"
        app:layout_constraintLeft_toLeftOf="@id/feed_user_image"/>
    <ImageView
        android:id="@+id/inspireButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="#14a0fc"
        android:padding="5dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_inspireButton"
        app:layout_constraintTop_toTopOf="@id/feed_user_image"
        app:layout_constraintBottom_toBottomOf="@id/feed_user_image"
        android:src="@drawable/bg_inspirebtn" />
    <Button
        android:id="@+id/inspireCount"
        android:layout_width="wrap_content"
        android:minWidth="60dp"
        android:layout_height="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_inspire"
        android:text="0"
        android:fontFamily="sans-serif"
        android:alpha="0.5"
        android:background="#fff"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="@id/feed_user_image"
        app:layout_constraintTop_toBottomOf="@id/postself"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/feedbackCount"
        android:layout_width="wrap_content"
        android:minWidth="60dp"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/icon_feedback"
        android:text="0"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif"
        android:alpha="0.5"
        android:background="#fff"
        app:layout_constraintLeft_toRightOf="@id/inspireCount"
        app:layout_constraintTop_toBottomOf="@id/postself"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"/>
    <Button
        android:id="@+id/shareCount"
        android:layout_width="wrap_content"
        android:minWidth="60dp"
        android:layout_height="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_share"
        android:text="0"
        android:fontFamily="sans-serif"
        android:alpha="0.5"
        android:background="#fff"
        app:layout_constraintLeft_toRightOf="@id/feedbackCount"
        app:layout_constraintTop_toBottomOf="@id/postself"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inspireCount"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="14dp"
        android:hint="Share your thoughts..."
        android:singleLine="false"/>
</android.support.constraint.ConstraintLayout>