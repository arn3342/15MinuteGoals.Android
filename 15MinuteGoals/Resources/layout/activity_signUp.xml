<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/feedbackDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    android:gravity="center">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="25dp"
        android:background="@drawable/bg_setUpProfile">
        <TextView
            android:id="@+id/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রোফাইল পূরণ কর"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
        <View
            android:id="@+id/seperator"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#c2c2c2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Header"/>
        <WebView
            android:id="@+id/userImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/seperator"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userImg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="23dp"
            android:text="Aousaf Rashid"
            android:fontFamily="sans-serif-light"/>
    </android.support.constraint.ConstraintLayout>
    <EditText
        android:id="@+id/defaultCreds"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        android:textSize="14dp"
        android:text="স্বপ্ন পূরণে অগ্রগামী"
        android:textColor="#0196ff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:background="@drawable/bg_roundedTextboxShadow"
        android:fontFamily="sans-serif-light"
        style="?android:attr/borderlessButtonStyle"
        android:drawableRight="@drawable/icon_pen"
        android:drawablePadding="10dp"
        android:translationY="-20dp"/>
    <AutoCompleteTextView
        android:id="@+id/districtBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/defaultCreds"
        android:background="@drawable/bg_roundedTextBox"
        android:hint="তোমার জেলা"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <AutoCompleteTextView
        android:id="@+id/instituteBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/districtBox"
        android:background="@drawable/bg_roundedTextBox"
        android:hint="তোমার জেলা"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
</android.support.constraint.ConstraintLayout>