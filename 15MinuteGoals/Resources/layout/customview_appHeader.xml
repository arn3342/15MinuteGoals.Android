<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_onlybottomshadow"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <ImageView
        android:id="@+id/menuBtn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:src="@drawable/menu_icon"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="আওসাফ রশিদ"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/menuBtn"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/coinIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:src="@drawable/coin_icon"/>
    <TextView
        android:id="@+id/pointCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/coinIcon"
        app:layout_constraintLeft_toRightOf="@id/coinIcon"
        app:layout_constraintBottom_toBottomOf="@id/coinIcon"
        android:layout_marginLeft="5dp"/>
</android.support.constraint.ConstraintLayout>