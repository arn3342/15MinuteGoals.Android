<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/suggestedSubjectContainer"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_subjectBox">
                <TextView
                    android:id="@+id/subjectParentGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Science"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/bg_roundDimBackground"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/subjectParentGroup"
                    app:layout_constraintLeft_toLeftOf="@id/subjectParentGroup"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:text="পদার্থবিজ্ঞ্যান ১ম পত্র"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/subjectFollower1"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectName"/>
                <ImageView
                    android:id="@+id/subjectFollower2"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectFollower1"/>
                <ImageView
                    android:id="@+id/subjectFollower3"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectFollower2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toRightOf="@id/subjectFollower3"
                    app:layout_constraintTop_toTopOf="@id/subjectFollower3"
                    app:layout_constraintBottom_toBottomOf="@id/subjectFollower3"
                    android:textColor="#fff"
                    android:text="+40 following"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
            </android.support.constraint.ConstraintLayout>
