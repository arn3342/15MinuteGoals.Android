<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gobackBtn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/seperator"
        android:src="@drawable/icon_left_indicator"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="এক নজরে সব বিষয়"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>
    <View
        android:id="@+id/seperator"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#c2c2c2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Header"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/gradeScroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/seperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight=".5">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/gradeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch" >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/chemistrySubject"
            android:background="@drawable/bg_semiroundedTextboxShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_alignSelf="flex_start"
            app:layout_flexBasisPercent="25%"
            app:layout_constraintTop_toBottomOf="@id/seperator"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="15dp"
            android:clickable="true">
            <TextView
                android:id="@+id/subjectInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="র"
                android:textSize="30dp"
                android:textColor="#0090ff"
                android:background="@drawable/bg_roundCircle_sample"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="17dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/subjectInitial"
                app:layout_constraintLeft_toRightOf="@id/subjectInitial"
                android:layout_marginLeft="18dp"
                android:text="রষায়ণ"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ট্যাপ করে কোর্স দেখো"
                app:layout_constraintTop_toBottomOf="@id/subjectName"
                app:layout_constraintLeft_toLeftOf="@id/subjectName"
                app:layout_constraintBottom_toBottomOf="@id/subjectInitial"/>
    </android.support.constraint.ConstraintLayout>
    </com.google.android.flexbox.FlexboxLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>