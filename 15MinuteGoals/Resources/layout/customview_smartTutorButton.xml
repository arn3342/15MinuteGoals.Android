<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"           
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verify_card"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2.3sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="15dp"
    android:layout_margin="5dp">
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/smartTutorHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="জৈব যৌগ কী?"
            android:textSize="18dp"
            android:textColor="#b2adad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_headerbar_textview_blue"
            android:gravity="center"
            android:text="প্রশ্ন করো"
            android:textColor="#fff"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/smartTutorHint"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>