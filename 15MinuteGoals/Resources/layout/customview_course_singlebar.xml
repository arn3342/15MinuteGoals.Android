<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_user_headerbar_textview"
    android:layout_margin="15dp"
    android:paddingBottom="20dp">
    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/icon_coin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textStyle="bold"
        android:textColor="#ff9d1e"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/coin_icon"
        app:layout_constraintTop_toTopOf="@id/coin_icon"
        app:layout_constraintBottom_toBottomOf="@id/coin_icon"/>
    <TextView
        android:id="@+id/following_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="following"
        android:textStyle="normal"
        android:textColor="#999898"
        android:textSize="13dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/coin_icon"
        app:layout_constraintBottom_toBottomOf="@id/coin_icon"/>
    <TextView
        android:id="@+id/course_following_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textStyle="bold"
        android:textColor="@color/appThemeBlue"
        android:textSize="13dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/following_text"
        app:layout_constraintTop_toTopOf="@id/coin_icon"
        app:layout_constraintBottom_toBottomOf="@id/coin_icon"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_read"
        app:layout_constraintRight_toLeftOf="@id/course_following_count_textview"
        app:layout_constraintTop_toTopOf="@id/coin_icon"
        app:layout_constraintBottom_toBottomOf="@id/coin_icon"
        android:layout_marginRight="7dp"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_course_rounded_image"
        android:id="@+id/course_singlebar_courseImage"
        android:layout_width="60dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/coin_icon"
        app:layout_constraintLeft_toLeftOf="@id/coin_icon"/>
    <TextView
        android:id="@+id/course_singlebar_courseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="{Course Title}"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course_singlebar_courseImage"
        app:layout_constraintLeft_toRightOf="@id/course_singlebar_courseImage"
        app:layout_constraintTop_toTopOf="@id/course_singlebar_courseImage"
        app:layout_constraintBottom_toTopOf="@id/course_singlebar_coursePublisher"/>
    <TextView
        android:id="@+id/by_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by"
        android:textStyle="normal"
        android:textColor="#929292"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        app:layout_constraintLeft_toRightOf="@id/course_singlebar_courseImage"
        app:layout_constraintTop_toBottomOf="@id/course_singlebar_courseTitle"
        app:layout_constraintBottom_toBottomOf="@id/course_singlebar_courseImage"/>
    <TextView
        android:id="@+id/course_singlebar_coursePublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Course Publisher}"
        android:textStyle="bold"
        android:textColor="@color/appThemeBlue"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        app:layout_constraintLeft_toRightOf="@id/by_textview"
        app:layout_constraintTop_toBottomOf="@id/course_singlebar_courseTitle"
        app:layout_constraintBottom_toBottomOf="@id/course_singlebar_courseImage"/>
    <TextView
        android:id="@+id/course_singlebar_courseDescription"
        android:background="@drawable/bg_onlybottomshadow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="{Course Description}"
        android:textStyle="normal"
        android:textColor="#1e1d1d"
        android:textSize="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="12dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/course_singlebar_courseImage"
        app:layout_constraintTop_toBottomOf="@id/course_singlebar_courseImage" />
    <Button
        android:id="@+id/course_singlebar_showContent"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="See Contents"
        android:background="@drawable/selector_bg_user_headerbar_textview"
        android:stateListAnimator="@null"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textColor="@color/appThemeBlue"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_singlebar_courseDescription"/>
    <Button
        android:id="@+id/course_singlebar_chooseCourse"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Choose"
        android:paddingRight="15dp"
        android:drawablePadding="-12dp"
        android:background="@drawable/selector_bg_user_headerbar_textview_blue"
        android:drawableRight="@drawable/bg_button_icon_right"
        android:stateListAnimator="@null"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_singlebar_courseDescription"/>
</android.support.constraint.ConstraintLayout>