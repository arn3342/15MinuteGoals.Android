<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/headerbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/bg_topbar"
    android:focusableInTouchMode="true"
    android:minWidth="25dp"
    android:minHeight="25dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="60dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iconbtn"/>
        <ImageView
            android:id="@+id/iconbtn"
            android:layout_width="20dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight=".25"
            android:background="@drawable/icon_search"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:layout_constraintBottom_toTopOf="@+id/buttontext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/buttontext"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight=".3"
            android:text="Search"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconbtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:id="@+id/topBar_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/demo_user"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/topBar_user_image"
        app:layout_constraintTop_toTopOf="@id/topBar_user_image"
        app:layout_constraintBottom_toBottomOf="@id/topBar_user_image"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Explore"
        android:textColor="#fff"
        android:paddingLeft="12dp" />
</android.support.constraint.ConstraintLayout>