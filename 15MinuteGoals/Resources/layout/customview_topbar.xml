<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#fff"
        android:focusable="true" 
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="@+id/searchBox"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/searchBox"
            android:src="@drawable/demo_user"
            />
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="35dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/writepostBtn"
            android:layout_marginLeft="15dp"
            android:text="Search"
            android:textSize="13dp"
            android:textColor="#8c8c8c"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_user_headerbar_textview"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="@id/searchBox"
            app:layout_constraintTop_toTopOf="@id/searchBox"
            app:layout_constraintBottom_toBottomOf="@id/searchBox"
            android:src="@drawable/search_icon_dim"
            android:alpha="0.6"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/writepostBtn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/searchBox"
            app:layout_constraintBottom_toBottomOf="@id/searchBox"
            android:src="@drawable/write_icon"
            android:alpha="0.5"/>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBox"
            android:layout_marginTop="15dp"
            android:background="#c4c4c4" />
    </android.support.constraint.ConstraintLayout>