<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logoWithText"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:transitionName="logoTransition"/>
    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="স্বপ্নপূরণের যাত্রা \nএখানেই শুরু!"
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:textSize="30dp"/>
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_loginSignUp"
        android:paddingLeft="20dp"
        android:paddingTop="38dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/emailinput"
            android:hint="তোমার ইমেইল বা ফোন"
            android:background="@drawable/bg_roundedTextBox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/loginbutton"
            android:background="@drawable/selector_bg_user_headerbar_textview_blue"
            android:drawableRight="@drawable/bg_button_icon_right"
            android:text="Next"
            android:paddingRight="20dp"
            android:paddingLeft="25dp"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            style="?android:attr/borderlessButtonStyle"/>
        <ProgressBar
            android:id="@+id/progressBox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            style="@style/ProgressTheme"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>