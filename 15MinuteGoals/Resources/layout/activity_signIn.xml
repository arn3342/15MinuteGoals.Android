<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logoWithText"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:transitionName="logoTransition"/>
    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="স্বপ্নপূরণের যাত্রা \nএখানেই শুরু!"
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:textSize="30dp"/>
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_loginSignUp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/caption">
        <TextView
            android:layout_marginTop="5dp"
            android:text="Email or phone"
            android:textColor="#0096ff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/emailinput"
            android:drawablePadding="20dp"
            android:hint="example@domain.com"
            android:background="@drawable/bg_roundedTextBox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textColor="#0096ff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/passwordinput"
            android:drawablePadding="20dp"
            android:hint="••••••"
            android:background="@drawable/bg_roundedTextBox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/progressBox"
        android:layout_height="40dp"
        android:layout_width="40dp"
        app:layout_constraintTop_toBottomOf="@id/loginContainer"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/loginContainer"
        app:layout_constraintRight_toRightOf="@id/loginContainer"
        android:translationY="-50dp"
        android:alpha="0"/>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/loginContainer"
        app:layout_constraintRight_toRightOf="@id/loginContainer"
        app:layout_constraintTop_toBottomOf="@id/loginContainer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">
        <Button
            android:id="@+id/signupbutton"
            app:layout_constraintTop_toBottomOf="@id/loginContainer"
            app:layout_constraintLeft_toLeftOf="@id/loginContainer"
            app:layout_constraintRight_toLeftOf="@id/loginbutton"
            android:background="@drawable/selector_bg_stroked_btn"
            android:textAllCaps="false"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="নতুন যাত্রার শুরু"
            android:textColor="#20a3ff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/loginbutton"
            app:layout_constraintTop_toBottomOf="@id/loginContainer"
            app:layout_constraintLeft_toRightOf="@id/signupbutton"
            app:layout_constraintRight_toRightOf="@id/loginContainer"
            android:background="@drawable/bg_user_headerbar_textview_blue"
            android:drawableRight="@drawable/bg_button_icon_right"
            android:paddingRight="25dp"
            android:drawablePadding="-20dp"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="Sign in"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>