<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logoWithText"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="The journey \nbegins here."
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:textSize="30dp"/>
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_loginSignUp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/caption">
        <TextView
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textColor="#0096ff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/emailinput"
            android:drawablePadding="20dp"
            android:hint="example@domain.com"
            android:background="@drawable/bg_roundedTextBox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textColor="#0096ff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/passwordinput"
            android:drawablePadding="20dp"
            android:hint="••••••"
            android:background="@drawable/bg_roundedTextBox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/loginbutton"
        app:layout_constraintTop_toBottomOf="@id/loginContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progressBox"
        android:background="@drawable/background_gradient_blue_button"
        android:drawableRight="@drawable/rightIcon"
        android:paddingRight="25dp"
        android:drawablePadding="-20dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sign in"
        android:textColor="#fff"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        style="?android:attr/borderlessButtonStyle"/>
    <ImageView
        android:id="@+id/progressBox"
        android:layout_height="8dp"
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@id/loginContainer"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/loginbutton"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/newText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"
        app:layout_constraintLeft_toLeftOf="@id/loginbutton"
        app:layout_constraintRight_toLeftOf="@+id/signUpBtn"
        android:text="New here?"
        android:textSize="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/newText"
        app:layout_constraintRight_toRightOf="@id/loginbutton"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"
        android:text=" Start the journey"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#0096ff"
        android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>