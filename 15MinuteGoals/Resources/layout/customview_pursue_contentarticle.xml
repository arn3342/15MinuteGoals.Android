<?xml version="1.0" encoding="utf-8" ?> 
<android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
    android:background="#fff">
                <TextView
                    android:id="@+id/contentTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/contentArticleTitle"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/contentTypeTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Part:4 - C# Classes"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/articleDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/contentArticleTitle"
                    app:layout_constraintLeft_toLeftOf="@id/contentArticleTitle"
                    android:layout_marginTop="5dp"
                    android:text="This article offers a guided tour about the class ..."/>
</android.support.constraint.ConstraintLayout>