<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/headerbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/bg_writepost"
    android:focusableInTouchMode="true"
    android:minWidth="25dp"
    android:minHeight="25dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/smallUserImg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/demo_user"/>
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Hey, Aousaf!"
        android:textColor="#8a8a8a"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/smallUserImg"
        app:layout_constraintLeft_toRightOf="@id/smallUserImg"
        app:layout_constraintBottom_toBottomOf="@id/smallUserImg" />
    <TextView
        android:id="@+id/bodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share something inspiring!"
        android:textColor="#38cdff"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/smallUserImg"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"/>
    <TextView
        android:id="@+id/canInspire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can inspire xx people!"
        android:textColor="#bfbfbf"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/bodyText"
        app:layout_constraintLeft_toLeftOf="@id/smallUserImg"
        android:layout_marginTop="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/canInspire"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_pen"/>
</android.support.constraint.ConstraintLayout>