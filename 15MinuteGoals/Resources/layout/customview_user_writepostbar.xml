<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/writePostContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp">
        <EditText
            android:id="@+id/postBox"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_writepost"
            android:layout_margin="10dp"
            android:singleLine="false"
            android:textSize="24dp"
            android:paddingTop="45dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="20dp"
            android:gravity="top"
            android:hint="A quote, an article, share whatever helps others!"/>
        <TextView
            android:id="@+id/shareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/postBox"
            app:layout_constraintLeft_toLeftOf="@id/postBox"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"
            android:text="Share something inspiring"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/shareText"
            app:layout_constraintLeft_toLeftOf="@id/shareText"
            android:background="@drawable/bg_user_headerbar_textview_blue"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Post"
            app:layout_constraintRight_toRightOf="@id/postBox"
            app:layout_constraintBottom_toBottomOf="@id/postBox"
            android:background="@drawable/bg_user_headerbar_textview_blue"
            android:textAllCaps="false"
            android:textColor="#fff"
            style="?android:attr/borderlessButtonStyle"/>
    </android.support.constraint.ConstraintLayout>