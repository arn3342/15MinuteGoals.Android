<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gobackBtn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/seperator"
        android:src="@drawable/icon_left_indicator"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="যাত্রার শুরুটা এখানেই"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>
    <View
        android:id="@+id/seperator"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#c2c2c2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Header"/>
    <TextView
        android:id="@+id/classTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="তোমার শ্রেণী নির্বাচন কর"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/seperator"
        android:layout_marginTop="15dp"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/gradeScroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/classTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight=".5">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/gradeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Class 6"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_roundedGray"
                style="?android:attr/borderlessButtonStyle"
                app:layout_alignSelf="flex_start"
                app:layout_flexBasisPercent="25%"
                android:enabled="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Class 7"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_roundedGray"
                style="?android:attr/borderlessButtonStyle"
                app:layout_alignSelf="center"
                app:layout_flexBasisPercent="25%"
                android:enabled="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Class 8"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_roundedGray"
                style="?android:attr/borderlessButtonStyle"
                app:layout_alignSelf="flex_end"
                app:layout_flexBasisPercent="25%"
            android:enabled="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Class 9-10"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_roundedGray"
                style="?android:attr/borderlessButtonStyle"
                app:layout_alignSelf="flex_end"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Class 11-12"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_roundedGray"
                style="?android:attr/borderlessButtonStyle"
                app:layout_alignSelf="flex_end"
            android:enabled="false"/>
        </com.google.android.flexbox.FlexboxLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>