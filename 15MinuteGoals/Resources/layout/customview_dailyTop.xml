<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <_15MinuteGoals.UI.CustomViews.GradientTextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="শুভ সকাল,\nAousaf!"
                android:textColor="@color/appThemeBlue"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:textSize="30dp"/>
            <ImageView
                android:id="@+id/dailyInspirationBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@id/caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/captionSeperator"
                android:background="@drawable/bg_inspireButton"
                android:src="@drawable/bg_inspirebtn"/>
            <View
                android:id="@+id/captionSeperator"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="@drawable/background_gradient_roundedcorners"
                app:layout_constraintTop_toBottomOf="@id/caption"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/caption"/>

        </android.support.constraint.ConstraintLayout>
