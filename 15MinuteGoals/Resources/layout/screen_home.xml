<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <_15MinuteGoals.UI.CustomViews.GradientTextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey there,\nAousaf!"
                android:textColor="@color/appThemeBlue"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:textSize="30dp"/>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/bg_homeTop"
                app:layout_constraintBottom_toBottomOf="@+id/captionTwo"/>
             <View
                android:id="@+id/captionSeperator"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="@drawable/background_gradient_roundedcorners"
                app:layout_constraintTop_toBottomOf="@id/caption"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/caption"/>
            <TextView
                android:id="@+id/captionTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:singleLine="false"
                android:text="If you have a dream, you have the right to make it come true!"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="@id/caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/captionSeperator" />
            <View
                android:id="@+id/academicBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/bg_academicGoal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/captionTwo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"/>
            <View
                android:id="@+id/entrepreneurBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/bg_entrepreneurGoal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/academicBtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>