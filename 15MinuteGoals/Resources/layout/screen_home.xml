<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <_15MinuteGoals.UI.CustomViews.GradientTextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey there,\nAousaf!"
                android:textColor="@color/appThemeBlue"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:textSize="30dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:padding="18dp"
                app:layout_constraintTop_toTopOf="@id/caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/captionSeperator"
                android:src="@drawable/no_inspire_icon"
                android:background="@drawable/bg_inspireBtn"/>
            <View
                android:id="@+id/captionSeperator"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="@drawable/background_gradient_roundedcorners"
                app:layout_constraintTop_toBottomOf="@id/caption"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/caption"/>
            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/getStartedContainer"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/captionSeperator"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_setClassMain">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="56dp"
                    android:layout_marginLeft="30dp"
                    android:text="সবার সাথে তুমিও \nএগিয়ে চলো!"
                    android:textSize="22dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="যাত্রা শুরু করো"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="@drawable/bg_user_headerbar_textview_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="?android:attr/borderlessButtonStyle"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/captionTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:singleLine="false"
                android:text="এক নজরে পচ্ছন্দের কিছু বিষয়"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/getStartedContainer"/>
            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/suggestedSubjectContainer"
                android:layout_width="140dp"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@id/captionTwo"
                app:layout_constraintLeft_toLeftOf="@id/captionTwo"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_subjectBox">
                <TextView
                    android:id="@+id/subjectParentGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Science"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/bg_roundDimBackground"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/subjectParentGroup"
                    app:layout_constraintLeft_toLeftOf="@id/subjectParentGroup"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:text="পদার্থবিজ্ঞ্যান ১ম পত্র"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/subjectFollower1"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectName"/>
                <ImageView
                    android:id="@+id/subjectFollower2"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectFollower1"/>
                <ImageView
                    android:id="@+id/subjectFollower3"
                    android:src="@drawable/demo_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/subjectFollower2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toRightOf="@id/subjectFollower3"
                    app:layout_constraintTop_toTopOf="@id/subjectFollower3"
                    app:layout_constraintBottom_toBottomOf="@id/subjectFollower3"
                    android:textColor="#fff"
                    android:text="+40 following"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/captionThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:singleLine="false"
                android:text="একমুঠো অনুপ্রেরণা"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/suggestedSubjectContainer"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>