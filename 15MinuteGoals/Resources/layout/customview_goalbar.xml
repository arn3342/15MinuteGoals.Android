<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goalBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_goalbar"
    android:paddingBottom="20dp">
    <TextView
        android:id="@+id/goaltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become a C# Expert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="22dp"
        android:textSize="18dp"
        android:textColor="#a1a1a1"/>
    <TextView
        android:id="@+id/inspirecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14K"
        app:layout_constraintTop_toTopOf="@id/goaltitle"
        app:layout_constraintBottom_toBottomOf="@id/goaltitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#5c9aff"/>
    <ImageView
        android:id="@+id/inspireicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/inspire"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintRight_toLeftOf="@id/inspirecount"
        app:layout_constraintTop_toTopOf="@id/goaltitle"
        app:layout_constraintBottom_toBottomOf="@id/goaltitle"/>
    
    <Button
        android:id="@+id/pursuebutton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:text="Pursue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_pursuebtn"
        android:drawableLeft="@drawable/icon_pursue"
        android:paddingLeft="90dp"
        android:drawablePadding="-120dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goaltitle" />
    <EditText
        android:id="@+id/sharebox"
        android:background="@drawable/bg_user_headerbar_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share what you achieved today!"
        android:textColor="#027bd0"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/pursuebutton"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_pen"
        app:layout_constraintBottom_toBottomOf="@id/sharebox"
        app:layout_constraintRight_toRightOf="@id/sharebox"
        app:layout_constraintTop_toTopOf="@id/sharebox" />
    <TextView
        android:id="@+id/suggesttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent suggestions"
        app:layout_constraintTop_toBottomOf="@id/sharebox"
        app:layout_constraintLeft_toLeftOf="@id/sharebox"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/model1img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/model_1"
        app:layout_constraintTop_toBottomOf="@id/suggesttext"
        app:layout_constraintLeft_toLeftOf="@id/suggesttext"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/model2img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/model_2"
        app:layout_constraintTop_toTopOf="@id/model1img"
        app:layout_constraintBottom_toBottomOf="@id/model1img"
        app:layout_constraintLeft_toRightOf="@id/model1img"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/model3img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="@id/model1img"
        app:layout_constraintBottom_toBottomOf="@id/model1img"
        app:layout_constraintLeft_toRightOf="@id/model2img"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fivemore"
        app:layout_constraintTop_toTopOf="@id/model1img"
        app:layout_constraintBottom_toBottomOf="@id/model1img"
        app:layout_constraintLeft_toRightOf="@id/model3img"
        android:layout_marginLeft="15dp"/>
</android.support.constraint.ConstraintLayout>