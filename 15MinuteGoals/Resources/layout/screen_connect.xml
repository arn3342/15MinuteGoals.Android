<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/emailInviteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:paddingBottom="15dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/achieve_together_man_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/achieveTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            android:text="Achieve together!"
            android:textStyle="bold"
            android:textColor="#14a9ff"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/achieveTitle"
            app:layout_constraintLeft_toLeftOf="@id/achieveTitle"
            android:layout_marginTop="3dp"
            android:text="Alone you can fast, but together you can go far!"/>
        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:background="#14a9ff"/>
        <TextView
            android:id="@+id/inviteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/seperator"
            android:text="Invite your friends, get rewards and achieve together!"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/emailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/inviteText"
            android:background="@drawable/bg_user_headerbar_textview"
            android:hint="Email or phone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintRight_toRightOf="@id/emailBox"
            app:layout_constraintTop_toTopOf="@id/emailBox"
            app:layout_constraintBottom_toBottomOf="@id/emailBox"
            android:src="@drawable/send_icon"
            android:padding="10dp"
            android:background="@drawable/selector_bg_user_headerbar_textview"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailInviteContainer"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/shareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Sharing is caring!"
            android:layout_margin="15dp"/>
        <ImageView
            android:id="@+id/fbShareBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/shareText"
            app:layout_constraintLeft_toLeftOf="@id/shareText"
            android:layout_marginTop="10dp"
            android:src="@drawable/social_fb"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/linkedinShareBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/fbShareBtn"
            app:layout_constraintLeft_toRightOf="@id/fbShareBtn"
            android:src="@drawable/social_linkedin"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/twitterShareBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/fbShareBtn"
            app:layout_constraintLeft_toRightOf="@id/linkedinShareBtn"
            android:src="@drawable/social_twitter"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/referralText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/fbShareBtn"
            app:layout_constraintTop_toBottomOf="@id/fbShareBtn"
            android:text="Your referral link:"

            android:paddingRight="15dp"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/referralLinkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/fbShareBtn"
            app:layout_constraintTop_toBottomOf="@id/referralText"
            android:background="@drawable/bg_user_headerbar_textview"
            android:text="Referral link here"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="13dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="@id/referralLinkText"
            app:layout_constraintBottom_toBottomOf="@id/referralLinkText"
            app:layout_constraintRight_toRightOf="@id/referralLinkText"
            android:layout_marginRight="2dp"
            android:text="Copy link"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="12dp"
            android:background="@drawable/selector_bg_user_headerbar_textview_blue"
            style="?android:attr/borderlessButtonStyle"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/referralLinkText"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="@id/referralLinkText"
            app:layout_constraintRight_toRightOf="@id/referralLinkText"
            android:background="@drawable/bg_allBorders">
            <ImageView
                android:id="@+id/coinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_coin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/achieveTogether1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/coinIcon"
                app:layout_constraintTop_toTopOf="@id/coinIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/coinIcon"
                android:singleLine="false"
                android:textSize="13dp"
                android:textColor="#0aa5ff"
                android:layout_marginLeft="10dp"
                android:text="Achieve together! Refer 10 friends and earn upto 1000 coins, redeem more courses and achieve more goals!"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>